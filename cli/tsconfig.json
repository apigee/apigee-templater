{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 17",
  "compilerOptions": {
    "lib": [
      "ES6"
    ],
    "module": "NodeNext",
    "target": "ES6",
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "bin"
  ],
  "lib": [
    "ES6"
  ]
}