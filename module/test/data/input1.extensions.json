{
  "name": "test-extensions-proxy",
  "profile": "default",
  "endpoints": [
    {
      "name": "default",
      "basePath": "/test-extensions",
      "target": {
        "name": "default",
        "url": "https://httpbin.org",
        "headers": {
          "Accept-Encoding": "gzip,deflate"
        }
      },
      "quotas": [
        {
          "count": "200",
          "timeUnit": "day"
        }
      ],
      "spikeArrest": {
        "rate": "20ps"
      },
      "auth": [],
      "extensionSteps": [
        {
          "type": "ExtractVariables",
          "name": "ExtractQueryParam1",
          "flowRunPoints": [{
            "name": "preRequest",
            "runPoints": ["preRequest"]
          }],
          "ignoreUnresolvedVariables": true,
          "prefix": "test",        
          "queryParams": [
            {
              "name": "param1",
              "ignoreCase": true,
              "pattern": "{param1}" 
            }
          ]
        },
        {
          "type": "AssignMessage",
          "name": "AssignNewVariable",
          "flowRunPoints": [{
            "name": "preRequest",
            "runPoints": ["preRequest"]
          }],
          "ignoreUnresolvedVariables": true,
          "assignVariables": [
            {
              "name": "test.param2",
              "value": "value2"
            },
            {
              "name": "param3",
              "ref": "test.param1"
            }
          ]
        },        
        {
          "type": "AssignMessage",
          "name": "SetTargetHeader",
          "flowRunPoints": [{
            "name": "preTarget",
            "stepCondition": "(proxy.pathsuffix MatchesPath \"/get\") and (request.verb = \"GET\")",
            "runPoints": ["preTarget"]
          }],
          "continueOnError": true,
          "ignoreUnresolvedVariables": true,
          "set": {
            "headers": [
              {
                "name": "X-Test-Header",
                "value": "{test.param1}"
              }
            ]
          }
        },
        {
          "type": "AssignMessage",
          "name": "SetResponseHeader",
          "flowRunPoints": [{
            "name": "/get set header",
            "flowCondition": "(proxy.pathsuffix MatchesPath \"/get\") and (request.verb = \"GET\")",                          
            "runPoints": ["postResponse"]
          }],
          "continueOnError": true,
          "assignTo": "response",
          "ignoreUnresolvedVariables": true,
          "set": {
            "headers": [
              {
                "name": "testHeader2",
                "value": "{test.param2}"
              }
            ]
          }
        },
        {
          "type": "FlowCallout",
          "name": "CallSetHeaderFlow",
          "flowRunPoints": [{
            "name": "postResponse",
            "runPoints": ["postResponse"]
          }],
          "flowName": "AddTestHeaderFlow" 
        }
      ]
    }
  ]
}