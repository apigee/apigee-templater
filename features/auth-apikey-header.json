{
  "name": "auth-apikey-header",
  "description": "Adds simple API key authentication from a header in the proxy pre-flow.",
  "parameters": [
    {
      "name": "API_KEY_HEADER_NAME",
      "description": "The header name to use for the API key",
      "examples": ["x-api-key", "x-apikey"],
      "default": "x-api-key"
    }
  ],
  "endpointRequestPreFlowSteps": [
    {
      "name": "VA-VerifyKey"
    },
    {
      "name": "AM-RemoveKey"
    }
  ],
  "policies": [
    {
      "name": "VA-VerifyKey",
      "type": "VerifyAPIKey",
      "content": {
        "_declaration": {
          "_attributes": {
            "version": "1.0",
            "encoding": "UTF-8",
            "standalone": "yes"
          }
        },
        "VerifyAPIKey": {
          "_attributes": {
            "continueOnError": "false",
            "enabled": "true",
            "name": "VA-VerifyKey"
          },
          "DisplayName": {
            "_text": "VA-VerifyKey"
          },
          "Properties": {},
          "APIKey": {
            "_attributes": {
              "ref": "request.header.API_KEY_HEADER_NAME"
            }
          }
        }
      }
    },
    {
      "name": "AM-RemoveKey",
      "type": "AssignMessage",
      "content": {
        "_declaration": {
          "_attributes": {
            "version": "1.0",
            "encoding": "UTF-8",
            "standalone": "yes"
          }
        },
        "AssignMessage": {
          "_attributes": {
            "continueOnError": "false",
            "enabled": "true",
            "name": "AM-RemoveKey"
          },
          "DisplayName": {
            "_text": "AM-RemoveKey"
          },
          "Properties": {},
          "Remove": {
            "Headers": {
              "Header": {
                "_attributes": {
                  "name": "API_KEY_HEADER_NAME"
                }
              }
            }
          },
          "IgnoreUnresolvedVariables": {
            "_text": "true"
          },
          "AssignTo": {
            "_attributes": {
              "createNew": "false",
              "transport": "http",
              "type": "request"
            }
          }
        }
      }
    }
  ]
}
