<ProxyEndpoint name="llama">
  <HTTPProxyConnection>
    <BasePath>/v1/llama</BasePath>
  </HTTPProxyConnection>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>VA-VerifyKey</Name>
      </Step>
      <Step>
        <Name>AM-RemoveKey</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <RouteRule name="default">
    <TargetEndpoint>llama</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>