<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
  <Description/>
  <FaultRules>
    <FaultRule name="invalid_key_rule">
      <Step>
        <Name>AM-SetInvalidKey</Name>
      </Step>
      <Condition>(fault.name = "FailedToResolveAPIKey")</Condition>
    </FaultRule>
  </FaultRules>
  <DefaultFaultRule name="default-fault">
    <Step>
      <Name>AM-SetDefaultError</Name>
    </Step>
  </DefaultFaultRule>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>VA-VerifyKey</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <Flows>
    <Flow name="get">
      <Description/>
      <Request>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/get") and (request.verb = "GET")</Condition>
    </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>/v1/test-proxy</BasePath>
    <Properties/>
  </HTTPProxyConnection>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
  <RouteRule name="get">
    <Condition>(proxy.pathsuffix MatchesPath "/get") and (request.verb = "GET")</Condition>
    <URL>https://httpbin.org</URL>
  </RouteRule>
</ProxyEndpoint>
