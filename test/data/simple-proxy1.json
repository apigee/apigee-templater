{
  "name": "simple-proxy1",
  "displayName": "",
  "description": "",
  "features": [],
  "endpoints": [
    {
      "name": "default",
      "path": "/test-proxy",
      "flows": [
        {
          "name": "PreFlow",
          "mode": "Request",
          "condition": "",
          "steps": [
            {
              "name": "VA-VerifyKey",
              "condition": "proxy.pathsuffix = \"/get\""
            },
            {
              "name": "AM-RemoveKey"
            }
          ]
        }
      ],
      "faultRules": [],
      "routes": [
        {
          "name": "get",
          "condition": "proxy.pathsuffix = \"/get\"",
          "target": "target2"
        },
        {
          "name": "default",
          "target": "default"
        }
      ]
    }
  ],
  "targets": [
    {
      "name": "default",
      "flows": [],
      "faultRules": [],
