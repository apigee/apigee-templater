<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
  <HTTPProxyConnection>
    <BasePath>/v1/simple-proxy</BasePath>
  </HTTPProxyConnection>
  <PreFlow name="PreFlow">
    <Request>
    </Request>
    <Response>
    </Response>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response>
      <Step>
        <Name>JS-SetResponse</Name>
      </Step>
    </Response>
  </PostFlow>
  <RouteRule name="get">
    <TargetEndpoint>httpbin</TargetEndpoint>
    <Condition>proxy.pathsuffix = "/get"</Condition>
  </RouteRule>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
